@model List<ResultQuestDto>

@{
    int Count = 0;
}

<div class="accordion" id="accordionExample">
    @foreach (var Questions in Model)
    {
        Count++;

        <div class="accordion-item">
            <h2 class="accordion-header" id="heading-@Count">
                <button style="color:#000 !important;" class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@Count" aria-expanded="true" aria-controls="collapse-@Count">
                    @Questions.Question
                </button>
            </h2>
            <div id="collapse-@Count" class="accordion-collapse collapse" aria-labelledby="heading-@Count" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    @Questions.Answer
                </div>
            </div>
        </div>
    }
</div>