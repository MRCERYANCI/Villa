@model UpdateQuestDto

@{
    ViewData["Title"] = "Soru&Cevap Güncelleme Alanı";
    Layout = "~/Views/Shared/_AdminTemplateLayout.cshtml";
}

<div class="row">
    <div class="col-xl-12 col-xxl-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Soru&Cevap Güncelleme Alanı</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form method="POST">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <input asp-for="Id" type="hidden" class="form-control input-default">
                        </div>
                        <div class="form-group">
                            <input asp-for="Question" type="text" class="form-control input-default" placeholder="Lütfen Soru Kısmını Giriniz...">
                            <span asp-validation-for="Question" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <textarea asp-for="Answer" class="form-control input-default" placeholder="Lütfen Soru Cevap Alanını Giriniz..." rows="10"></textarea>
                            <span asp-validation-for="Answer" class="text-danger"></span>
                        </div>
                        <button class="btn btn-outline-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

