@model UpdateContactDto

@{
    ViewData["Title"] = "İletişim Bilgisi Güncelleme Alanı";
    Layout = "~/Views/Shared/_AdminTemplateLayout.cshtml";
}


<div class="row">
    <div class="col-xl-12 col-xxl-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">İletişim Bilgileri Güncelleme Alanı</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form method="POST">
                        <div class="form-group">
                            <input asp-for="Id" type="hidden" class="form-control input-default" >
                        </div>
                        <div class="form-group">
                            <input asp-for="MapUrl" type="text" class="form-control input-default " placeholder="Harita Url Bilgisi Giriniz..." required autocomplete="off">
                        </div>
                        <div class="form-group">
                            <input asp-for="Phone" type="text" class="form-control input-default " placeholder="+90 596 789 45 62" required autocomplete="off">
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" type="email" class="form-control input-default " placeholder="deneme@gmail.com" required autocomplete="off">
                        </div>
                        <div class="form-group">
                            <textarea asp-for="Adress" required placeholder="Lütfen Adres Alanını Giriniz..." rows="10" class="form-control input-default" autocomplete="off"></textarea>
                        </div>
                        
                        <button class="btn btn-outline-primary">Güncelle</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
