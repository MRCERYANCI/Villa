@model CreateProductDto

@{
    ViewData["Title"] = "Mülk Ekleme Alanı";
    Layout = "~/Views/Shared/_AdminTemplateLayout.cshtml";
}

<div class="row">
    <div class="col-xl-12 col-xxl-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Yeni Mülk Alanı Girişi</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form method="POST">
                        <div class="form-group">
                            <input asp-for="ImageUrl" type="text" class="form-control input-default" placeholder="Lütfen Resim Yolunu Giriniz..." required>
                        </div>
                        <div class="form-group">
                            <select asp-for="Category" class="form-control input-default">
                                <option>Bir Kategori Seçin*</option>
                                <option value="Modern Villa">Modern Villa</option>
                                <option value="Çatı Katı">Çatı Katı</option>
                                <option value="Lüks Villa">Lüks Villa</option>
                                <option value="Ahşap Villa">Ahşap Villa</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input asp-for="Price" type="number" class="form-control input-default" placeholder="Lütfen Bir Fiyat Bilgisi Giriniz..." required>
                        </div>
                        <div class="form-group">
                            <input asp-for="Title" type="text" class="form-control input-default" placeholder="Lütfen Bir Başlık Giriniz..." required>
                        </div>
                        <div class="form-group">
                            <input asp-for="BedRoomCount" type="number" min="1" max="50" class="form-control input-default" placeholder="Lütfen Oda Sayısı Belirtiniz..." required>
                        </div>
                        <div class="form-group">
                            <input asp-for="BathRoomCount" type="number" min="1" max="50" class="form-control input-default" placeholder="Lütfen Banyo Sayısı Belirtiniz..." required>
                        </div>
                        <div class="form-group">
                            <input asp-for="Area" type="number" min="1" max="1000" class="form-control input-default" placeholder="Lütfen Metrekare Bilgisini Belirtiniz..." required>
                        </div>
                        <div class="form-group">
                            <input asp-for="ParkingCount" type="number" min="1" max="50" class="form-control input-default" placeholder="Lütfen Park Sayısını Belirtiniz..." required>
                        </div>
                        <div class="form-group">
                            <input asp-for="Floor" type="number" min="1" max="5" class="form-control input-default" placeholder="Lütfen Kat Sayısını Belirtiniz..." required>
                        </div>
                        
                        <button class="btn btn-outline-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

