@model List<ResultProductDto>

<div class="properties section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 offset-lg-4">
                <div class="section-heading text-center">
                    <h6>| Mülklerimiz</h6>
                    <h2>Bir Adım Öte: Villa Yaşamında Lüksün İzleri</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var Products in Model)
            {
                double FiyatBilgisi = double.Parse(Products.Price);

                <div class="col-lg-4 col-md-6">
                    <div class="item">
                        <a href="property-details.html"><img src="@Products.ImageUrl" alt=""></a>
                        <span class="category">@Products.Category</span>
                        <h6>@FiyatBilgisi.ToString("C")</h6>
                        <h4><a href="property-details.html">@Products.Title</a></h4>
                        <ul>
                            <li>Oda Sayısı: <span>@Products.BedRoomCount</span></li>
                            <li>Banyo Sayısı: <span>@Products.BathRoomCount</span></li>
                            <li>Metrekare Alanı: <span>@Products.Area m<sup>2</sup></span></li>
                            <li>Kat Sayısı: <span>@Products.Floor</span></li>
                            <li>Park Alan Sayısı: <span>@Products.ParkingCount</span></li>
                        </ul>
                        <div class="main-button">
                            <a href="property-details.html">Detaylı Gör</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>