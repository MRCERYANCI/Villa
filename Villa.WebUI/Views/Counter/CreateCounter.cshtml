@model CreateCounterDto

@{
    ViewData["Title"] = "Sayaç Ekleme Alanı";
    Layout = "~/Views/Shared/_AdminTemplateLayout.cshtml";
}



<div class="row">
    <div class="col-xl-12 col-xxl-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Yeni Sayaç Alanı Girişi</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form method="POST">
                        <div class="form-group">
                            <input asp-for="Title" type="text" class="form-control input-default " placeholder="Lütfen Sayaç Başlığını Giriniz..." required>
                        </div>
                        <div class="form-group">
                            <input asp-for="Count" type="text" oninput="this.value = this.value.replace(/[^0-9]/g, '')" class="form-control input-default" inputmode="numeric" placeholder="Lütfen Sayaç Sayısı Giriniz..." required>
                        </div>                        
                        <button class="btn btn-outline-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>